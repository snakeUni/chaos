{
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outFile": "lib",
    "target": "es5",
    "lib": ["es6", "ES2016", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": false,
    "declaration": true
  },
  "include": ["src"]
}
